<header>
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><%= name_project(uppercase: true) %></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <%= current_user.email %>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Edit", edit_user_registration_url, class: "dropdown-item" %></li>
                <li><hr class="dropdown-divider"></li>
                <li><%= button_to "Sign Out", destroy_user_session_url, class: "dropdown-item sign-out-link", method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Sing In", new_user_session_url, class: "nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sing Up", new_user_registration_url, class: "nav-link active" %>
            </li>
          <% end %>
        </ul>
        <div class="d-flex" data-controller="switch-theme">
          <input type="checkbox" class="btn-check" id="btn-check-outlined" autocomplete="off" data-switch-theme-target="checkBox" data-action="click->switch-theme#triger">
          <label class="btn btn-outline-primary" for="btn-check-outlined" data-switch-theme-target="nameLabel">Dark</label>
          <br>
        </div>
      </div>
    </div>
  </nav>
</header>
